<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/commentUser"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/commentListHead"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/commentListName"
            android:layout_toRightOf="@id/commentListHead"
            android:text="2222"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/commentListTime"
            android:layout_below="@+id/commentListName"
            android:layout_toRightOf="@id/commentListHead"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:visibility="gone"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/comment"
           android:layout_below="@id/commentListTime"
           android:text="过硬"
           android:textSize="12sp"
           android:padding="5dp"
           android:singleLine="true"
           android:layout_alignLeft="@id/commentListName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />


    </RelativeLayout>
    
</LinearLayout>