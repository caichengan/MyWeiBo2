<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#f4d007"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/chatImg"
            android:layout_width="wrap_content"
            android:src="@mipmap/home_as_up"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/chatUser"
            android:layout_width="wrap_content"
            android:text="用户"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/chatMy"
            android:layout_width="40dp"
            android:src="@mipmap/my_switch"
            android:padding="7dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <ListView
        android:id="@+id/chatListView"

        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:dividerHeight="0dp"
        android:background="@android:color/white"
        android:layout_weight="1"
        android:listSelector="@android:color/transparent"
        android:layout_height="match_parent">


    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="0.001dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bottom_bar"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/chatEdit"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_edit_search_normal"
            android:layout_margin="3dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/chatSend"
            android:layout_width="60dp"
            android:text="发送"
            android:background="@drawable/btn_background_circle"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>