<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/messageUser"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/messageListHead"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/messageListName"
            android:layout_toRightOf="@id/messageListHead"
            android:text="2222"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/messageListTime"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/message"
            android:layout_below="@id/messageListTime"
            android:text="过硬"
            android:textSize="15sp"
            android:padding="5dp"
            android:maxEms="10"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignLeft="@id/messageListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

</LinearLayout>