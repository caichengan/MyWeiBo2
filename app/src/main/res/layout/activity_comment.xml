<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imgBack"
            android:src="@mipmap/home_as_up"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="微博正文"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"
        android:layout_height="0.01dp"/>
   <include layout="@layout/item_comment"/>

    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="0.001dp"/>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listViewComment"
        android:layout_height="wrap_content">

    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:id="@+id/linEdComment"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edComment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:hint="评论"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnComment"
            android:layout_width="wrap_content"
            android:text="提交"
            android:layout_margin="5dp"
            android:background="@drawable/btn_background_circle"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linText"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:layout_height="40dp">


        <LinearLayout
            android:id="@+id/linReport"
            android:layout_width="0dp"
            android:paddingTop="4dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >

            <TextView
                android:layout_width="match_parent"
                android:text="转发"
                android:gravity="center"
                android:layout_height="40dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linComment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:layout_marginLeft="2dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >
            <TextView
                android:layout_width="match_parent"
                android:text="评论"
                android:gravity="center"
                android:layout_height="40dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linAttidude"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:layout_marginLeft="2dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >
            <TextView
                android:layout_width="match_parent"
                android:text="点赞"
                android:gravity="center"
                android:layout_height="40dp" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>