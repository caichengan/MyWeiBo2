<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="好友"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <com.xht.android.myweibo.view.ClearEditText
        android:id="@+id/mClientEdit"
        android:layout_marginTop="5dip"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/while_stroke"
        android:drawableLeft="@drawable/sorlistview_search_bar_icon_normal"
        android:hint="请输入关键字"
        android:singleLine="true"
        android:textSize="15.0dip" />

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:background="@android:color/white"
        android:layout_height="match_parent">



        <ListView
            android:id="@+id/lvMessageFriend"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" >
        </ListView>
    </com.baoyz.widget.PullRefreshLayout>
</LinearLayout>
