<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linUser"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/newListHead"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:src="@mipmap/ic_launcher"
            android:padding="3dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/newListName"
            android:layout_toRightOf="@id/newListHead"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/newListTime"
            android:layout_below="@+id/newListName"
            android:layout_toRightOf="@id/newListHead"
            android:text=""
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uresContent"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linReport"
            android:layout_width="0dp"
            android:paddingTop="4dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >
            <TextView
                android:layout_width="match_parent"
                android:text="转发"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/userReport"
                android:text="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linCommit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >
            <TextView
                android:layout_width="match_parent"
                android:text="评论"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/userCommit"
                android:text="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linAttidude"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >
            <TextView
                android:layout_width="match_parent"
                android:text="点赞"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/userAttidude"
                android:text="2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>