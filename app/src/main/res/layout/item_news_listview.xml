<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/linUser"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/newListHead"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/newListName"
            android:layout_toRightOf="@id/newListHead"
            android:text="2222"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:textColor="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/newListTime"
            android:layout_below="@+id/newListName"
            android:layout_toRightOf="@id/newListHead"
            android:text="111"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/newSources"
            android:layout_below="@+id/newListName"
            android:text=""
            android:layout_toRightOf="@id/newListTime"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:clickable="false"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uresContent"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linPic"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgPicture"
            android:layout_width="200dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="1dp"
            android:layout_height="200dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linTranspond"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/colorGray1"
        android:visibility="visible"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transpond"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ChangePic"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgChangePic"
                android:layout_width="200dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="1dp"
                android:layout_height="200dp" />


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.001dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="11dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linReport"
            android:layout_width="0dp"
            android:paddingTop="4dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >
            <TextView
                android:layout_width="match_parent"
                android:text="转发"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/userReport"
                android:text=""
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linCommit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:layout_marginLeft="2dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >
            <TextView
                android:layout_width="match_parent"
                android:text="评论"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/userCommit"
                android:text=""
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linAttidude"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:layout_marginLeft="2dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_height="40dp" >
            <TextView
                android:layout_width="match_parent"
                android:text="点赞"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/userAttidude"
                android:text=""
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>



    
    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray2"
        android:layout_height="10dp" />

</LinearLayout>